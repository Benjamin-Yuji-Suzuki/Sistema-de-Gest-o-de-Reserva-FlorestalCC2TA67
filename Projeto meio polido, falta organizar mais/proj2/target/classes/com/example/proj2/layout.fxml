<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proj2.LayoutController">
    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="Gestão de Reserva Florestal" />
            </menus>
        </MenuBar>
        <AnchorPane prefHeight="265.0" prefWidth="640.0">
            <children>
                <Button fx:id="registrarespecies" layoutX="36.0" layoutY="52.0" onAction="#abrirRegistrarEspecie" text="Registrar Espécies" />
                <Button fx:id="listarespecies" layoutX="36.0" layoutY="102.0" onAction="#abrirListarEspecies" prefHeight="25.0" prefWidth="111.0" text="Listar Espécies" />
                <Button fx:id="registrarareas" layoutX="36.0" layoutY="152.0" onAction="#abrirRegistrarAreas" prefHeight="25.0" prefWidth="111.0" text="Registrar Áreas" />
                <Button fx:id="listarareas" layoutX="36.0" layoutY="202.0" onAction="#abrirListarAreas" prefHeight="25.0" prefWidth="111.0" text="Listar Áreas" />
            <Button fx:id="registrarespecies1" layoutX="230.0" layoutY="52.0" onAction="#abrirRegistrarEspecieAvistadas" text="Registrar espécies avistadas" />
            <Button fx:id="listarespecies1" layoutX="230.0" layoutY="102.0" onAction="#abrirListarEspeciesAvistadas" prefHeight="25.0" prefWidth="163.0" text="Listar espécies avistadas" />
            <Button fx:id="importcsv" layoutX="230.0" layoutY="152.0" onAction="#importarArquivoCSV" prefHeight="25.0" prefWidth="163.0" text="Importar arquivo CSV" />
            <Button fx:id="exportcsv" layoutX="230.0" layoutY="202.0" onAction="#exportarArquivoCSV" prefHeight="25.0" prefWidth="163.0" text="Exportar arquivo CSV" />
            </children>
        </AnchorPane>
    </children>
</VBox>
